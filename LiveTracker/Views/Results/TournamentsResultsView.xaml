                    <Label Content="{Binding Stats.BreakevenDays}" ToolTip="The total number of break-even days in the results" HorizontalAlignment="Left" FontSize="{Binding FontSize}"/>
                </StackPanel>
            </Grid>
        </Expander>

    </Grid>
