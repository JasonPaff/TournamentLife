                    <Label Content="Shortest Tournament: " HorizontalAlignment="Right" FontSize="{Binding FontSize}"/>
                    <Label Content="Average Tournament: " HorizontalAlignment="Right" FontSize="{Binding FontSize}"/>
                    <Label Content="Total Days Played: " HorizontalAlignment="Right" FontSize="{Binding FontSize}"/>
                    <Label Content="Winning Days: " HorizontalAlignment="Right" FontSize="{Binding FontSize}"/>
                    <Label Content="Losing Days: " HorizontalAlignment="Right" FontSize="{Binding FontSize}"/>
                    <Label Content="Break-even Days: " HorizontalAlignment="Right" FontSize="{Binding FontSize}"/>
